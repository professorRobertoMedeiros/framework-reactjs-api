{
  "name": "framework-reactjs-api",
  "version": "1.0.1",
  "description": "Framework base para camada de data flow/API de projetos React com DDD, Clean Architecture e SOLID",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "examples",
    "README.md",
    "MANUAL.md",
    "DECORATORS.md"
  ],
  "bin": {
    "framework-reactjs-api-migrate": "./bin/migration-runner.js",
    "framework-reactjs-api-sync": "./bin/schema-sync.js",
    "framework-reactjs-api-scaffold": "./bin/usecase-scaffold.js",
    "framework-reactjs-api-check": "./bin/project-check.js"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "mkdir -p dist/infra/migrations && cp -r src/infra/migrations/*.sql dist/infra/migrations/",
    "prepublishOnly": "npm run build",
    "postinstall": "chmod +x ./bin/*.js",
    "scaffold": "ts-node src/infra/cli/usecase-scaffold.ts",
    "migration:run": "ts-node src/infra/cli/migration-runner.ts",
    "schema:sync": "ts-node src/infra/cli/schema-sync.ts sync",
    "docs:manual": "cat MANUAL.md",
    "test": "jest"
  },
  "keywords": [
    "ddd",
    "clean-architecture",
    "react",
    "typescript",
    "solid",
    "orm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/glob": "^9.0.0",
    "@types/node-cron": "^3.0.11",
    "amqplib": "^0.10.9",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "glob": "^11.0.3",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^11.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
