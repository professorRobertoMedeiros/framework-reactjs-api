# ====================================
# CONFIGURAÇÃO DO BANCO DE DADOS
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scheduler_example
DB_USER=postgres
DB_PASSWORD=postgres

# ====================================
# AUTENTICAÇÃO JWT
# ====================================
JWT_SECRET=scheduler_example_secret_key_change_in_production
JWT_EXPIRES_IN=24h

# ====================================
# SERVIDOR
# ====================================
PORT=3001
NODE_ENV=development

# ====================================
# SISTEMA DE LOGS
# ====================================
LOG_ENABLED=true
LOG_LEVEL=debug
LOG_SQL=true
LOG_HTTP=true
LOG_FILE_PATH=./logs

# ====================================
# SCHEDULER DE JOBS
# ====================================

# Habilitar sistema de scheduler
SCHEDULER_ENABLED=true

# Iniciar scheduler automaticamente quando o projeto iniciar
# Se false, precisa chamar POST /api/scheduler/start manualmente
SCHEDULER_AUTO_START=true

# Número máximo de jobs executando simultaneamente
SCHEDULER_MAX_CONCURRENT=3

# Intervalo de verificação de jobs prontos (em milissegundos)
SCHEDULER_CHECK_INTERVAL=30000

# Tempo limite para considerar um job travado (em minutos)
SCHEDULER_STUCK_THRESHOLD=15
